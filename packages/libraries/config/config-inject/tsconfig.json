{
    "extends": "../../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        "composite": true,

        "typeRoots": [
            "./src/@types",
            "./node_modules/@types",
            "../../../../node_modules/@types"
        ],
        "types": [
            "node", "jest", "config"
        ]
    },
    "include": [
        "src"
    ],
    "references": [
        {
            "path": "../../core/errors",
        },
        {
            "path": "../../core/logger"
        }
    ],
    "exclude": [
        "node_modules",
        "dist",
        ".vscode",
        ".git",
        "./**/__mocks__/*.ts"
    ]
}