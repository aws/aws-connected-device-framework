{
  "name": "@cdf/auth-jwt",
  "version": "2.0.0",
  "description": "API Gateway lambda authorizer that verifies JWT tokens.",
  "author": "Dean Hart <deanhart@amazon.com>",
  "main": "lib/index.js",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "clean": "npx shx rm -rf dist deploy tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/config'",
    "test": "rushx lint && NODE_ENV= NODE_CONFIG_DIR='./src/config' jest --silent --passWithNoTests",
    "start": "rushx build && NODE_CONFIG=$(cat ${CONFIG_LOCATION}/auth-jwt/${npm_package_config_environment}-config.json) NODE_CONFIG_DIR='./src/config' nodemon dist/index.js",
    
    "prebundle": "npx shx rm -rf deploy bundle.zip && npx shx mkdir deploy",
    "bundle": "rush deploy --overwrite --project ${npm_package_name} --target-folder deploy",
    "postbundle": "cd deploy && zip --symlinks -rq ../bundle.zip *"

  },
  "dependencies": {
    "@cdf/errors": "^3.0.0",
    "axios": "0.21.0",
   "config": "3.2.4",
    "js-yaml": "3.13.1",
    "jsonwebtoken": "8.5.1",
    "jwk-to-pem": "2.0.4",
    "logform": "2.1.2",
    "ow": "0.23.0",
    "reflect-metadata": "0.1.13",
    "uuid": "8.3.2",
    "readable-stream": "2.3.6",
    "winston": "3.2.1",
    "winston-transport": "4.3.0"
  },
  "devDependencies": {
    "@types/config": "0.0.37",
    "@types/jsonwebtoken": "8.5.0",
    "@types/jwk-to-pem": "2.0.0",

    "@rushstack/eslint-config": "2.3.1",
    "eslint": "7.15.0",

    "nodemon": "2.0.6",
    "nyc": "15.1.0",
    "shx": "0.3.3",

    "@types/jest": "26.0.18",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock-extended": "1.0.10",
    "jest-mock": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest": "26.6.3",
    "ts-jest": "26.4.4",
    "typescript": "4.1.2"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
