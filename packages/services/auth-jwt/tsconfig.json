{
    "extends": "../../tsconfig.base.json",
    "compilerOptions": {
        "outDir": "dist",
        "rootDir": "src",
        
        "typeRoots": [
            "./src/@types",
            "./node_modules/@types",
            "../../../node_modules/@types"
        ],
        "types": [
            "jest", "config", "reflect-metadata", "node"
        ]
    },
    "references": [
        {
            "path": "../../libraries/core/errors"
        }
    ],
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "../../../node_modules",
        "dist",
        ".vscode",
        ".git",
        "./**/__mocks__/*.ts"
    ]
}