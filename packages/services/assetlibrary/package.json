{
  "name": "@cdf/assetlibrary",
  "version": "1.3.0",
  "description": "CDF Asset Library",
  "author": "Dean Hart <deanhart@amazon.com>",
  "scripts": {
    "reset": "pnpm run clean && del-cli node_modules",
    "clean": "del-cli dist build",
    "lint": "tslint \"src/**/*.ts\"",
    "build": "tsc -b tsconfig.json",
    "test": "pnpm run lint && nyc jest",
    "prebundle": "pnpm run clean && pnpm run build && cpy package.json dist && cpy src/types/definitions/* dist/types/definitions/ && cpy src/config/* dist/config/ && make-dir build && cd dist && make-dir node_modules && pnpm i --prod --shamefully-flatten --force",
    "prebundle:orig": "cpy package.json dist && cpy src/types/definitions/* dist/types/definitions/ && cpy src/config/* dist/config/ && del-cli ../../builds/assetlibrary/dist --force && cpy dist ../../builds/assetlibrary/ --parents && del-cli ../../builds/assetlibrary/dist/node_modules --force && pnpm i --prod --shamefully-flatten --force && cp -LR node_modules ../../builds/assetlibrary/dist/",
    "bundle": "cd dist && zip -rq ../build/build.zip *",
    "postbundle": "echo '\n\n******   node_modules have been flattened and resolved in production mode.  If this is a dev environment, make sure you run `pnpm run reset` from the root to reset.'",
    "start": "NODE_CONFIG=$(cat ${ASSETLIBRARY_CONFIG_LOCATION}) NODE_CONFIG_DIR='./src/config' ts-node src/lambda_proxy.ts",
    "start-dist": "NODE_CONFIG=$(cat ${ASSETLIBRARY_CONFIG_LOCATION}) NODE_CONFIG_DIR='./src/config' node lambda_proxy.js"
  },
  "dependencies": {
    "@cdf/config-inject": "^1.2.0",
    "ajv": "^6.8.1",
    "aws-sdk": "^2.398.0",
    "aws-serverless-express": "^3.3.5",
    "body-parser": "^1.18.3",
    "config": "^1.30.0",
    "express": "^4.16.4",
    "fast-json-patch": "^2.0.7",
    "flatted": "^2.0.0",
    "gremlin": "3.2.9",
    "inversify": "^5.0.1",
    "inversify-binding-decorators": "4.0.0",
    "inversify-express-utils": "^6.3.2",
    "js-yaml": "^3.12.0",
    "node-cache": "^4.2.0",
    "npm": "^6.1.0",
    "ow": "^0.12.0",
    "reflect-metadata": "^0.1.13",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.5.2",
    "@commitlint/config-conventional": "^7.5.0",
    "@semantic-release/changelog": "^3.0.2",
    "@semantic-release/git": "^7.0.8",
    "@semantic-release/npm": "^5.1.4",
    "@semantic-release/release-notes-generator": "^7.1.4",
    "@types/aws-serverless-express": "^3.3.0",
    "@types/body-parser": "^1.17.0",
    "@types/config": "0.0.34",
    "@types/express": "^4.16.1",
    "@types/jest": "~24.0.0",
    "@types/node": "~8.10.40",
    "aws-sdk-mock": "^4.3.0",
    "commitizen": "^3.0.7",
    "cpy-cli": "^2.0.0",
    "del-cli": "^1.1.0",
    "husky": "^1.3.1",
    "jest": "~24.1.0",
    "jest-create-mock-instance": "^1.1.0",
    "jest-mock": "^24.0.0",
    "make-dir-cli": "^1.0.0",
    "nyc": "^13.1.0",
    "semantic-release": "^15.13.3",
    "semantic-release-monorepo": "^6.1.1",
    "ts-jest": "24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "typescript": "^3.3.1"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_STRICT_MODE": false,
      "SUPPRESS_NO_CONFIG_WARNING": true
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true,
  "release": {
    "monorepo": {
      "analyzeCommits": {
        "format": "atom"
      },
      "generateNotes": "myNotesGenerator"
    },
    "prepare": [
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "verifyConditions": [
      "@semantic-release/git"
    ]
  }
}
