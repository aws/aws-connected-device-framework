{
  "name": "@cdf/certificate-activator",
  "version": "3.1.0",
  "description": "CDF Certificate Activator",
  "author": "Dean Hart <deanhart@amazon.com>",
  "config": {
    "environment": "development"
  },
  "scripts": {

    "clean": "npx shx rm -rf dist deploy tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/'",
    "test": "rushx lint && NODE_ENV=local_test NODE_CONFIG_DIR='./src/config' jest --silent",
    "start": "rushx build && NODE_CONFIG=$(cat ${CONFIG_LOCATION}/certificateactivator/${npm_package_config_environment}-config.json) NODE_CONFIG_DIR='./src/config' nodemon dist/lambda_proxy.js",
    
    "prebundle": "npx shx rm -rf deploy bundle.zip && npx shx mkdir deploy",
    "bundle": "rush deploy --overwrite --project ${npm_package_name} --target-folder deploy",
    "postbundle": "cd deploy && zip --symlinks -rq ../bundle.zip *"
  },
  "dependencies": {
    "@cdf/errors": "^3.0.0",
    "@cdf/logger": "^3.0.0",
    "@cdf/lambda-invoke": "^2.0.0",
    "@cdf/assetlibrary-client": "^4.0.2",
    "@cdf/config-inject": "^3.0.0",
    "@cdf/provisioning-client": "^4.0.1",
    "aws-sdk": "2.804.0",
    "config": "3.3.6",
    "inversify": "5.1.1",
    "inversify-binding-decorators": "4.0.0",
    "inversify-express-utils": "6.3.2",
    "js-yaml": "4.1.0",
    "logform": "2.2.0",
    "ow": "0.23.0",
    "pem": "1.14.4",
    "readable-stream": "3.6.0",
    "reflect-metadata": "0.1.13",
    "superagent": "6.1.0",
    "winston": "3.3.3",
    "winston-transport": "4.4.0",
    "atob": "2.1.2"
  },
  "devDependencies": {
    "@types/config": "0.0.38",
    "@types/pem": "1.9.5",

    "@rushstack/eslint-config": "2.3.4",
    "eslint": "7.26.0",

    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "shx": "0.3.3",

    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock-extended": "1.0.14",
    "jest-mock": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest": "26.6.3",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "@types/atob": "2.1.2"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
