{
  "name": "@cdf/provisioning",
  "version": "4.1.1",
  "description": "CDF Provisioning",
  "author": "Dean Hart <deanhart@amazon.com>",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "clean": "npx shx rm -rf dist deploy tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/' && npx shx cp -R 'src/things/policies' 'dist/things/policies'",
    "test": "rushx lint && NODE_ENV= NODE_CONFIG_DIR='./src/config' jest --silent",
    "start": "rushx build && NODE_CONFIG=$(cat ${CONFIG_LOCATION}/provisioning/${npm_package_config_environment}-config.json) NODE_CONFIG_DIR='./src/config' nodemon dist/lambda_proxy.js",
    "prebundle": "npx shx rm -rf deploy bundle.zip && npx shx mkdir deploy",
    "bundle": "rush deploy --overwrite --project ${npm_package_name} --target-folder deploy",
    "postbundle": "cd deploy && zip --symlinks -rq ../bundle.zip *"
  },
  "dependencies": {
    "@cdf/errors": "^3.0.0",
    "@cdf/logger": "^3.0.0",
    "@cdf/config-inject": "^3.0.0",
    "@cdf/express-middleware": "^2.0.0",
    "aws-sdk": "2.804.0",
    "body-parser": "1.19.0",
   "config": "3.3.6",
    "cors": "2.8.5",
    "express": "4.17.1",
    "fs": "0.0.1-security",
    "inversify": "5.1.1",
    "inversify-binding-decorators": "4.0.0",
    "inversify-express-utils": "6.3.2",
    "js-yaml": "4.1.0",
    "jszip": "3.6.0",
    "logform": "2.2.0",
    "ow": "0.23.0",
    "pem": "1.14.4",
    "readable-stream": "3.6.0",
    "reflect-metadata": "0.1.13",
    "serverless-http": "2.7.0",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "winston-transport": "4.4.0"
  },
  "devDependencies": {
    "@rushstack/eslint-config": "2.3.4",
    "@types/body-parser": "1.19.0",
    "@types/config": "0.0.38",
    "@types/cors": "2.8.10",
    "@types/express": "4.17.11",
    "@types/jest": "26.0.23",
    "@types/jszip": "3.4.1",
    "@types/pem": "1.9.5",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "eslint": "7.26.0",
    "jest": "26.6.3",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock": "26.6.2",
    "jest-mock-console": "^1.0.1",
    "jest-mock-extended": "1.0.14",
    "jest-resolve": "26.6.2",
    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "shx": "0.3.3",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
