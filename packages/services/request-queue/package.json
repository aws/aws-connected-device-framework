{
  "name": "@cdf/request-queue",
  "version": "2.0.0",
  "description": "CDF Request Queue - a service to queue requests in the event of a failure of a primary deployment",
  "author": "Dean Hart <deanhart@amazon.com>",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "reset": "npm run clean && del-cli node_modules",
    "clean": "del-cli dist build",
    "lint": "tslint \"src/**/*.ts\"",
    "build": "tsc -b tsconfig.json",
    "test": "npm run lint && NODE_ENV= NODE_CONFIG_DIR='./src/config' nyc jest --passWithNoTests",
    "start": "npm run build && NODE_CONFIG=$(cat ${CONFIG_LOCATION}/commands/${npm_package_config_environment}-config.json) NODE_CONFIG_DIR='./src/config' concurrently \"npm run build -- -w\" \"nodemon dist/lambda_proxy.js\"",
    "prebundle:prepare": "cpy package.json dist && cpy src/config/* dist/config/ && make-dir build && make-dir dist/node_modules",
    "bundle:package": "cd dist && zip -rq ../build/build.zip * && zip -ur ../build/build.zip ../package.json",
    "semantic-release": "npx semantic-release -e semantic-release-monorepo"
  },
  "dependencies": {
    "@cdf/config-inject": "^2.0.0",
    "aws-sdk": "2.418.0",
    "busboy": "0.2.14",
    "config": "3.0.1",
    "inversify": "5.0.1",
    "inversify-binding-decorators": "4.0.0",
    "js-yaml": "3.12.2",
    "math": "0.0.3",
    "multer": "1.4.1",
    "reflect-metadata": "0.1.13",
    "superagent": "4.1.0",
    "uuid": "3.3.2",
    "winston": "2.4.4"
  },
  "devDependencies": {
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@semantic-release/changelog": "3.0.2",
    "@semantic-release/git": "7.0.8",
    "@semantic-release/npm": "5.1.4",
    "@semantic-release/release-notes-generator": "7.1.4",
    "@types/config": "0.0.34",
    "@types/jest": "24.0.0",
    "@types/node": "8.10.43",
    "@types/superagent": "3.8.7",
    "@types/uuid": "3.4.4",
    "cpy-cli": "2.0.0",
    "del-cli": "1.1.0",
    "husky": "1.3.1",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "24.0.0",
    "jest-mock": "24.0.0",
    "jest-resolve": "24.5.0",
    "jest": "24.1.0",
    "make-dir-cli": "1.0.0",
    "nodemon": "1.18.10",
    "nyc": "13.3.0",
    "semantic-release": "15.13.3",
    "semantic-release-monorepo": "6.1.1",
    "ts-jest": "24.0.0",
    "tslint": "5.13.1",
    "typescript": "3.1.6"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
