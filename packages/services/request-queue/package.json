{
  "name": "@cdf/request-queue",
  "version": "4.0.0",
  "description": "CDF Request Queue - a service to queue requests in the event of a failure of a primary deployment",
  "author": "Dean Hart <deanhart@amazon.com>",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "clean": "npx shx rm -rf dist deploy tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/'",
    "test": "rushx lint && NODE_ENV= NODE_CONFIG_DIR='./src/config' jest --silent --passWithNoTests",
    "start": "rushx build && NODE_CONFIG=$(cat ${CONFIG_LOCATION}/request-queue/${npm_package_config_environment}-config.json) NODE_CONFIG_DIR='./src/config' nodemon dist/lambda_proxy.js",
    "prebundle": "npx shx rm -rf deploy bundle.zip && npx shx mkdir deploy",
    "bundle": "rush deploy --overwrite --project ${npm_package_name} --target-folder deploy",
    "postbundle": "cd deploy && zip --symlinks -rq ../bundle.zip *"
  },
  "dependencies": {
    "@cdf/errors": "^3.0.0",
    "@cdf/logger": "^3.0.0",
    "@cdf/config-inject": "^3.0.0",
    "aws-sdk": "2.777.0",
    "busboy": "0.3.1",
    "config": "3.2.4",
    "inversify": "5.0.5",
    "inversify-binding-decorators": "4.0.0",
    "js-yaml": "3.13.1",
    "logform": "2.1.2",
    "math": "0.0.3",
    "multer": "1.4.2",
    "readable-stream": "2.3.6",
    "reflect-metadata": "0.1.13",
    "superagent": "6.1.0",
    "uuid": "8.3.2",
    "winston": "3.2.1",
    "winston-transport": "4.3.0"
  },
  "devDependencies": {
    "@rushstack/eslint-config": "2.3.1",
    "@types/aws-lambda": "8.10.65",
    "@types/config": "0.0.37",
    "@types/jest": "26.0.18",
    "@types/superagent": "4.1.10",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "eslint": "7.15.0",
    "jest": "26.6.3",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock": "26.6.2",
    "jest-mock-extended": "1.0.10",
    "jest-resolve": "26.6.2",
    "nodemon": "2.0.6",
    "nyc": "15.1.0",
    "shx": "0.3.3",
    "ts-jest": "26.4.4",
    "typescript": "4.1.2"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
