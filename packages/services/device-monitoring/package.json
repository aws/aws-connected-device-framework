{
  "name": "@cdf/device-monitoring",
  "version": "4.0.0",
  "description": "CDF Device Monitoring",
  "author": "Rahul Sareen <rssareen@amazon.com>",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "clean": "npx shx rm -rf dist deploy tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/config'",
    "test": "rushx lint && NODE_ENV= NODE_CONFIG_DIR='./src/config' jest --silent --passWithNoTests",
    "start": "rushx build && NODE_CONFIG=$(cat ${CONFIG_LOCATION}/devicemonitoring/${npm_package_config_environment}-config.json) NODE_CONFIG_DIR='./src/config' nodemon dist/lambda_proxy.js",
    
    "prebundle": "npx shx rm -rf deploy bundle.zip && npx shx mkdir deploy",
    "bundle": "rush deploy --overwrite --project ${npm_package_name} --target-folder deploy",
    "postbundle": "cd deploy && zip --symlinks -rq ../bundle.zip *"
  },
  "dependencies": {
    "@cdf/errors": "^3.0.0",
    "@cdf/logger": "^3.0.0",
    "@cdf/lambda-invoke": "^2.0.0",
    "@cdf/assetlibrary-client": "^4.0.0",
    "@cdf/config-inject": "^3.0.0",
   "config": "3.2.4",
    "http-errors": "1.8.0",
    "js-yaml": "3.13.1",
    "logform": "2.1.2",
    "inversify": "5.0.5",
    "inversify-binding-decorators": "4.0.0",
    "inversify-express-utils": "6.3.2",
    "ow": "0.15.0",
    "readable-stream": "2.3.6",
    "reflect-metadata": "0.1.13",
    "superagent": "6.1.0",
    "winston": "3.2.1",
    "winston-transport": "4.3.0"
  },
  "devDependencies": {
    "@types/superagent": "4.1.10",
    "@types/config": "0.0.37",

    "@rushstack/eslint-config": "2.3.1",
    "eslint": "7.15.0",

    "nodemon": "2.0.6",
    "nyc": "15.1.0",
    "shx": "0.3.3",

    "@types/jest": "26.0.18",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock-extended": "1.0.10",
    "jest-mock": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest": "26.6.3",
    "ts-jest": "26.4.4",
    "typescript": "4.1.2"
  },
  "nyc": {
    "exclude": [
      "dist"
    ]
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
