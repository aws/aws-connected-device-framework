{
  "name": "@awssolutions/cdf-provisioning",
  "version": "2.3.0",
  "description": "CDF Provisioning",
  "author": "Dean Hart",
  "files": [
    "bundle.zip"
  ],
  "scripts": {
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/' && npx shx cp -R 'src/things/policies' 'dist/things/policies'",
    "bundle": "npm run bundle:build && npm run bundle:deploy",
    "bundle:build": "lambda-zip --entry-point src/lambda_proxy.ts --copy config:src/config:.env.defaults",
    "bundle:deploy": "node ../../../infrastructure/bundle-package.js",
    "clean": "npx shx rm -rf dist tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "start": "rushx build && APP_CONFIG_DIR=${PWD}/src/config nodemon dist/lambda_proxy.js",
    "test": "rushx lint && jest --silent --maxWorkers=$JEST_MAX_WORKERS"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "devDependencies": {
    "@awssolutions/cdf-config-inject": "workspace:^2.3.0",
    "@awssolutions/cdf-errors": "workspace:^2.3.0",
    "@awssolutions/cdf-express-middleware": "workspace:~0.0.0",
    "@awssolutions/cdf-lambda-zip": "workspace:~0.0.0",
    "@awssolutions/cdf-logger": "workspace:^2.3.0",
    "@awssolutions/eslint-config-custom": "workspace:~0.0.0",
    "@awssolutions/simple-cdf-logger": "workspace:^2.3.0",
    "@types/body-parser": "1.19.2",
    "@types/cors": "2.8.10",
    "@types/dotenv-flow": "~3.2.0",
    "@types/express": "4.17.16",
    "@types/jest": "26.0.23",
    "@types/pem": "1.9.5",
    "@types/shortid": "~0.0.29",
    "@types/uuid": "8.3.0",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "aws-sdk": "2.1386.0",
    "body-parser": "1.20.1",
    "cors": "2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-flow": "~3.2.0",
    "eslint": "8.46.0",
    "express": "4.18.2",
    "fs": "0.0.1-security",
    "inversify": "6.0.1",
    "inversify-binding-decorators": "4.0.0",
    "inversify-express-utils": "6.4.3",
    "jest": "26.6.3",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock": "26.6.2",
    "jest-mock-console": "^1.0.1",
    "jest-mock-extended": "1.0.14",
    "jest-resolve": "26.6.2",
    "js-yaml": "4.1.0",
    "jszip": "3.10.1",
    "just-clone": "~3.2.1",
    "logform": "2.4.2",
    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "ow": "0.23.0",
    "pem": "1.14.4",
    "readable-stream": "3.6.0",
    "reflect-metadata": "0.1.13",
    "serverless-http": "2.7.0",
    "shortid": "~2.2.16",
    "shx": "0.3.3",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "uuid": "8.3.2",
    "winston": "3.3.3",
    "winston-transport": "4.4.0"
  }
}
