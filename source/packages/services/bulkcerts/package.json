{
  "name": "@cdf/bulkcerts",
  "version": "6.0.0",
  "description": "CDF Bulk Certificate Creation",
  "author": "Dean Hart",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "clean": "npx shx rm -rf dist tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/'",
    "test": "rushx lint && APP_CONFIG_DIR=${PWD}/src/config CONFIG_LOCATION=${PWD}/src/config/.env.test jest",
    "start": "rushx build && APP_CONFIG_DIR=${PWD}/src/config nodemon dist/lambda_proxy.js",
    "bundle": "../../../infrastructure/bundle-package.bash bulkcerts"
  },
  "dependencies": {
    "@cdf/errors": "^4.0.0",
    "@cdf/config-inject": "^4.0.0",
    "@cdf/logger": "^4.0.0",
    "@cdf/express-middleware": "^3.0.0",
    "aws-sdk": "2.1048.0",
    "aws-serverless-express": "3.4.0",
    "body-parser": "1.19.0",
    "cors": "2.8.5",
    "express": "4.17.1",
    "inversify": "5.1.1",
    "inversify-binding-decorators": "4.0.0",
    "inversify-express-utils": "6.3.2",
    "js-yaml": "4.1.0",
    "jszip": "3.7.0",
    "logform": "2.2.0",
    "ow": "0.23.0",
    "pem": "1.14.4",
    "reflect-metadata": "0.1.13",
    "uuid": "8.3.2",
    "readable-stream": "3.6.0",
    "winston": "3.3.3",
    "winston-transport": "4.4.0",
    "dotenv-flow": "~3.2.0",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.65",
    "@types/aws-serverless-express": "3.3.3",
    "@types/body-parser": "1.19.0",
    "@types/cors": "2.8.10",
    "@types/express": "4.17.11",
    "@types/jszip": "3.4.1",
    "@types/multer": "1.4.5",
    "@types/pem": "1.9.5",
    "@types/uuid": "8.3.0",

    "@rushstack/eslint-config": "2.3.4",
    "eslint": "7.26.0",

    "nodemon": "2.0.7",
    "nyc": "15.1.0",
    "shx": "0.3.3",

    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock-extended": "1.0.14",
    "jest-mock": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest": "26.6.3",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "@types/dotenv-flow": "~3.2.0"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
