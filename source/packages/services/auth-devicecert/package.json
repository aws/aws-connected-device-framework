{
  "name": "@aws-solutions/cdf-auth-devicecert",
  "version": "0.0.0",
  "description": "API Gateway custom authorizer that authenticates based on a supplied device certificate",
  "author": "Rahul Sareen",
  "scripts": {
    "clean": "npx shx rm -rf dist tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",

    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/'",
    "test": "rushx lint && NODE_ENV= jest --silent --maxWorkers=$JEST_MAX_WORKERS",
    "bundle": "../../../infrastructure/bundle-package.bash auth-devicecert"
  },
  "dependencies": {
    "@aws-solutions/cdf-errors": "^0.0.0",
    "@aws-solutions/cdf-config-inject": "^0.0.0",
    "aws-sdk": "2.1048.0",
    "js-yaml": "4.1.0",
    "logform": "2.4.2",
    "pem": "1.14.4",
    "reflect-metadata": "0.1.13",
    "winston": "3.3.3",
    "winston-transport": "4.4.0",
    "dotenv-flow": "~3.2.0",
    "dotenv": "^8.2.0"
  },
  "devDependencies": {
    "@types/pem": "1.9.5",

    "@rushstack/eslint-config": "2.3.4",
    "eslint": "7.26.0",

    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "shx": "0.3.3",

    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "4.23.0",
    "@typescript-eslint/parser": "4.23.0",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock-extended": "1.0.14",
    "jest-mock": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest": "26.6.3",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "@types/dotenv-flow": "~3.2.0"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
