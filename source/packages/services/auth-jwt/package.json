{
  "name": "@awssolutions/cdf-auth-jwt",
  "version": "0.0.0",
  "description": "API Gateway lambda authorizer that verifies JWT tokens.",
  "author": "Dean Hart",
  "main": "lib/index.js",
  "config": {
    "environment": "development"
  },
  "scripts": {
    "clean": "npx shx rm -rf dist tsconfig.tsbuildinfo bundle.zip .rush .nyc_output *.log",
    "lint": "npx eslint . --ext '.ts'",
    "build": "npx tsc -b && npx shx cp -R 'src/config' 'dist/'",
    "test": "rushx lint && NODE_ENV= jest --silent --passWithNoTests --maxWorkers=$JEST_MAX_WORKERS",
    "start": "rushx build && APP_CONFIG_DIR=${PWD}/src/config nodemon dist/index.js"
  },
  "dependencies": {
    "@awssolutions/cdf-errors": "workspace:^2.3.0",
    "@awssolutions/cdf-config-inject": "workspace:^2.3.0",
    "axios": "0.21.2",
    "js-yaml": "4.1.0",
    "jsonwebtoken": "9.0.0",
    "jwk-to-pem": "2.0.4",
    "logform": "2.4.2",
    "ow": "0.23.0",
    "reflect-metadata": "0.1.13",
    "uuid": "8.3.2",
    "readable-stream": "3.6.0",
    "winston": "3.3.3",
    "winston-transport": "4.4.0",
    "dotenv-flow": "~3.2.0"
  },
  "devDependencies": {
    "@awssolutions/eslint-config-custom": "workspace:~0.0.0",
    "@types/aws-lambda": "8.10.65",
    "@types/jsonwebtoken": "9.0.1",
    "@types/jwk-to-pem": "2.0.0",
    "eslint": "8.46.0",
    "nodemon": "2.0.20",
    "nyc": "15.1.0",
    "shx": "0.3.3",
    "@types/jest": "26.0.23",
    "@typescript-eslint/eslint-plugin": "6.2.0",
    "jest-create-mock-instance": "1.1.0",
    "jest-haste-map": "26.6.2",
    "jest-mock-extended": "1.0.14",
    "jest-mock": "26.6.2",
    "jest-resolve": "26.6.2",
    "jest": "26.6.3",
    "ts-jest": "26.5.6",
    "typescript": "4.2.4",
    "@types/dotenv-flow": "~3.2.0"
  },
  "jest": {
    "globals": {
      "NODE_CONFIG_DIR": "./src/config"
    },
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/**/?(*.)+(spec|test).ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
